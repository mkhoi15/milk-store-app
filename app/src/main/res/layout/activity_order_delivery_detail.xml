<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OrderDeliveryDetailActivity"
    android:id="@+id/main"
    android:background="#F5F5F5">

    <!-- Delivery Man Name Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:id="@+id/tvDeliveryManName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Man: Khoi - Delivery"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>
    </androidx.cardview.widget.CardView>

    <!-- Order Details Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: 1fef63e1-8d1d-4a14-9c8a-5a3db9348e93"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: Khoi - Shop customer"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date: 2024-10-23"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Assigned"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: So 09 Duong Tran Hung Dao, Quan 1"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 0123456789"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Price Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 30000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>
    </androidx.cardview.widget.CardView>

    <!-- Update Order Button -->
    <Button
        android:id="@+id/btnUpdateOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Order"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F51B5"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

</LinearLayout>
