<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- First Product Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="15dp"
        android:id="@+id/product_card_view_left">

        <!-- Product Layout with Image on Top -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Product Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/imgProductImgLeft"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner_orange"
                android:layout_marginBottom="10dp" />

            <!-- Product Details -->
            <TextView
                android:id="@+id/product_name_left"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Product name"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_stock_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock: 20"
                android:background="@drawable/rounded_corner_orange"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_price_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="200.000VND"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

