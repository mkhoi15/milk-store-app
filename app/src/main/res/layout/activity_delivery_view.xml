<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    tools:context=".DeliveryViewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Staff Order Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewDeliveryManName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Man: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:id="@+id/spinnerDeliveryStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDeliveryStaffOrders"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
